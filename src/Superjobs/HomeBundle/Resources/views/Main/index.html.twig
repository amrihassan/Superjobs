{% extends "SuperjobsHomeBundle::layout.html.twig" %}

{% block container %}

<center><h2>Welcome to SuperJobs!</h2></center>

<article>
	
    {% for job in jobs %}
            <header>
                <a href="{{ path('superjobs_home_recruiter_job_details', { 'tag': job.id }) }}"><h2>{{ job.title }}</h2></a>
                <time>{{ job.createdAt|date('d M Y')}}</time>
            </header>
            <div>
                    <a href="{{ job.url }}">{{ job.url }}</a>
                    <p>
                            {{ job.skills }}
                    </p>
            </div>
    {% endfor %}
</article>

{% endblock %}