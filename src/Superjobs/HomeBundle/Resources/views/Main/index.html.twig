{% extends "SuperjobsHomeBundle::layout.html.twig" %}

{% block container %}

<center><h2>Welcome to SuperJobs!</h2></center>

    {% for job in jobs %}
    <ul class="nav nav-pills nav-stacked">
        <li>
        <a href="{{ path('superjobs_home_recruiter_job_details', { 'tag': job.id }) }}">
            <h2>{{ job.title }}</h2>
        <time>{{ job.createdAt|date('d M Y')}}</time>
        <div>
            <p>{{ job.location }}</p>
        </div>
        </a>
        </li>
    </ul>
    <hr>
    {% endfor %}
{% endblock %}