{% extends "SuperjobsHomeBundle::layout.html.twig" %}
{% block container %}
<center><h2>Welcome to SuperJobs!</h2>
    <form class="form-search">
        <div class="input-append">
          <input type="text" class="search-query">
          <button class="btn btn-primary" type="submit">Recherche</button>
        </div>
    </form>    
</center>       
{# total items count #}
<div class="count">
    {{ pagination.getTotalItemCount }} Offres d'emploi
</div>
{# table body #}
{% for article in pagination %}
<div class="row">    
        <div class="col-xs-2">
            <time class="calendar">
                <em>{{ article.createdAt|date('Y')}}</em>
                <strong>{{ article.createdAt|date('M')}}</strong>
                <span>{{ article.createdAt|date('d')}}</span>
            </time>
        </div>    
        <div class="col-xs-10">            
            <a href="{{ path('superjobs_home_recruiter_job_details', { 'tag': article.id }) }}">
                <h4>{{ article.title }}</h4>
            </a>
            <br/>
            Type : {{ article.type }} | Poste à : {{ article.location }} | Societé : {{ article.company }}            
        </div>
</div>
<hr style="margin:0px;">
{% endfor %}
{# display navigation #}
<center>
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
</center>
{% endblock %}